{
  "name": "@meese-os/cli",
  "version": "1.0.9",
  "description": "meeseOS CLI",
  "scripts": {
    "build": "echo \"There is no build command for cli\" && exit 0",
    "eslint": "eslint index.js src/**/*.js bin/*.js",
    "jest": "jest",
    "test": "npm run eslint && npm run jest",
    "coverage": "jest --coverage",
    "prepublishOnly": "npm run test"
  },
  "license": "BSD-2-Clause",
  "main": "index.js",
  "files": [
    "bin",
    "src",
    "index.js",
    "README.md"
  ],
  "bin": {
    "meese-cli": "bin/cli.js"
  },
  "engines": {
    "node": ">=8.0"
  },
  "devDependencies": {
    "@meese-os/eslint-config": "workspace:*",
    "eslint": "^9.39.2",
    "eslint-plugin-jest": "^29.5.0",
    "jest": "^30.2.0"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "consola": "^3.4.2",
    "fs-extra": "^11.3.2",
    "getopts": "^2.3.0",
    "globby": "^11.0.2",
    "inquirer": "^8.2.6",
    "temp": "^0.9.4",
    "which": "^6.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "jest/globals": true
    },
    "plugins": ["jest"],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 11
    },
    "extends": ["@meese-os/eslint-config", "plugin:jest/recommended"]
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/__mocks__/setup.js"
    ],
    "coveragePathIgnorePatterns": [
      "src/tasks/watch.js",
      "/node_modules/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/meese-os/meeseOS.git",
    "directory": "development/cli"
  },
  "keywords": [
    "os",
    "osjs",
    "operating system",
    "webOS",
    "meeseOS",
    "cli"
  ]
}
