{
  "name": "@aaronmeese.com/gui",
  "version": "2.1.2",
  "description": "aaronmeese.com GUI",
  "module": "dist/esm.js",
  "main": "dist/main.js",
  "style": "dist/main.css",
  "scripts": {
    "test": "npm run eslint && npm run stylelint",
    "eslint": "eslint index.js 'src/**/*.js'",
    "build": "webpack",
    "build:esm": "rollup -c",
    "watch": "webpack --watch",
    "watch:esm": "rollup -c --watch",
    "stylelint": "stylelint index.scss src/**/*.scss --fix",
    "prepublishOnly": "npm run test && rm ./dist/* && NODE_ENV=production npm run build && npm run build:esm"
  },
  "files": [
    "dist/esm.js",
    "dist/esm.js.map",
    "dist/main.js",
    "dist/main.js.map",
    "dist/main.css",
    "dist/main.css.map",
    "README.md"
  ],
  "devDependencies": {
    "@aaronmeese.com/eslint-config": "workspace:*",
    "@aaronmeese.com/stylelint-config": "workspace:*",
    "@babel/core": "^7.17.2",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/runtime": "^7.17.2",
    "babel-loader": "^8.2.3",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.6.0",
    "css-minimizer-webpack-plugin": "^3.4.1",
    "eslint": "^8.18.0",
    "mini-css-extract-plugin": "^2.5.3",
    "rollup": "^2.67.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.53.0",
    "sass-loader": "^13.0.2",
    "stylelint": "^14.5.0",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-standard-scss": "^4.0.0",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "hyperapp": "^1.2.10",
    "hyperapp-nestable": "^1.1.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": "@aaronmeese.com/eslint-config"
  },
  "stylelint": {
    "extends": ["stylelint-config-standard-scss", "@aaronmeese.com/stylelint-config"]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "esdoc": {
    "source": "./src",
    "destination": "./doc",
    "plugins": [
      {
        "name": "esdoc-standard-plugin",
        "option": {
          "brand": {
            "title": "aaronmeese.com GUI API",
            "description": "aaronmeese.com GUI API Documentation"
          },
          "lint": {
            "enable": false
          },
          "coverage": {
            "enable": false
          },
          "undocumentIdentifier": {
            "enable": false
          }
        }
      },
      {
        "name": "esdoc-publish-html-plugin"
      }
    ]
  }
}
