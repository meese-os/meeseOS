{
  "name": "@meese-os/common",
  "version": "1.0.5",
  "description": "meeseOS Common Modules",
  "scripts": {
    "eslint": "eslint index.js src/**/*.js",
    "test": "npm run eslint",
    "build": "webpack",
    "prepublishOnly": "npm run eslint && rm -rf ./dist/* && NODE_ENV=production npm run build"
  },
  "license": "BSD-2-Clause",
  "main": "dist/main.js",
  "module": "dist/main.js",
  "typings": "index.d.ts",
  "files": [
    "index.d.ts",
    "dist/main.js.map",
    "dist/main.js",
    "README.md"
  ],
  "devDependencies": {
    "@meese-os/eslint-config": "workspace:*",
    "@babel/core": "^7.28.4",
    "@babel/plugin-transform-runtime": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/runtime": "^7.28.4",
    "babel-loader": "^10.0.0",
    "eslint": "^9.37.0",
    "stylelint": "^16.25.0",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@meese-os/event-emitter": "workspace:*",
    "async-dependency-graph": "^1.1.4",
    "deepmerge": "^4.3.1",
    "omit-deep": "^0.3.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": "@meese-os/eslint-config"
  },
  "babel": {
    "sourceType": "unambiguous",
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "esdoc": {
    "source": "./src",
    "destination": "./doc",
    "plugins": [
      {
        "name": "esdoc-standard-plugin",
        "option": {
          "brand": {
            "title": "meeseOS Common API",
            "description": "meeseOS Common API Documentation"
          },
          "lint": {
            "enable": false
          },
          "coverage": {
            "enable": false
          },
          "undocumentIdentifier": {
            "enable": false
          }
        }
      },
      {
        "name": "esdoc-publish-html-plugin"
      },
      {
        "name": "esdoc-ecmascript-proposal-plugin",
        "option": {
          "all": true
        }
      },
      {
        "name": "./src/esdoc.js"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/meese-os/meeseOS.git",
    "directory": "backend/common"
  },
  "keywords": [
    "os",
    "osjs",
    "operating system",
    "webOS",
    "meeseOS",
    "common",
    "common modules",
    "types"
  ]
}
