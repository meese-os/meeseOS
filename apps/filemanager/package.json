{
  "name": "@meese-os/filemanager",
  "version": "1.0.0",
  "description": "meeseOS Filemanager Application",
  "scripts": {
    "eslint": "eslint *.js",
    "test": "npm run eslint",
    "build": "webpack",
    "watch": "webpack --watch",
    "prepublishOnly": "npm run eslint && rm ./dist/* && NODE_ENV=production npm run build"
  },
  "files": [
    "dist/",
    "metadata.json"
  ],
  "meeseOS": {
    "type": "package"
  },
  "devDependencies": {
    "@meese-os/eslint-config": "workspace:*",
    "@meese-os/stylelint-config": "workspace:*",
    "@babel/core": "^7.22.11",
    "@babel/plugin-transform-runtime": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@babel/runtime": "^7.22.11",
    "babel-loader": "^9.1.3",
    "buffer": "^6.0.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.48.0",
    "mini-css-extract-plugin": "^2.7.6",
    "sass": "^1.66.1",
    "sass-loader": "^13.3.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "process": "^0.11.10",
    "events": "^3.3.0"
  },
  "dependencies": {
    "@meese-os/gui": "workspace:*",
    "dateformat": "^3.0.3",
    "file-type": "^17.1.4",
    "hyperapp": "^1.2.10",
    "stream-browserify": "^3.0.0",
    "graceful-fs": "^4.2.10",
    "url": "^0.11.0",
    "read-chunk": "^4.0.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": "@meese-os/eslint-config"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  }
}
