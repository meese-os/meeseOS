{
  "name": "@meese-os/preview",
  "version": "1.0.5",
  "description": "MeeseOS Preview Application",
  "scripts": {
    "eslint": "eslint *.js",
    "test": "npm run eslint",
    "build": "webpack",
    "prepublishOnly": "npm run test && rm -rf ./dist/* && NODE_ENV=production npm run build"
  },
  "license": "BSD-2-Clause",
  "files": [
    "dist/",
    "metadata.json"
  ],
  "meeseOS": {
    "type": "package"
  },
  "devDependencies": {
    "@meese-os/eslint-config": "workspace:*",
    "@meese-os/stylelint-config": "workspace:*",
    "@babel/core": "^7.28.4",
    "@babel/plugin-transform-runtime": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/runtime": "^7.28.4",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "eslint": "^9.36.0",
    "mini-css-extract-plugin": "^2.9.4",
    "sass": "^1.93.2",
    "sass-loader": "^16.0.5",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@meese-os/gui": "workspace:*",
    "hyperapp": "^1.2.10"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
